{
  "name": "@shridey/intelligentable",
  "version": "2.0.3",
  "description": "IntelligentTable is a highly customizable, performant, and feature-rich React table component built on top of Ant Design. It offers automatic data type detection, smart sorting, advanced summary rows, color rules, export options, and seamless integration with modern React workflows.",
  "main": "dist/index.umd.js",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.es.js",
      "types": "./dist/index.d.ts",
      "require": "./dist/index.umd.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vite build && tsc -b && tsc-alias -p tsconfig.app.json",
    "lint": "eslint .",
    "preview": "vite preview",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "react",
    "component",
    "antd",
    "table",
    "data-table",
    "intelligent-table",
    "typescript",
    "vite",
    "export",
    "summary",
    "sorting",
    "color-rules",
    "ui",
    "smart-table"
  ],
  "author": "Shridhar Pandey <shridharpandeyofficial@gmail.com>",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/shridey/intelligentable"
  },
  "homepage": "https://github.com/shridey/intelligentable#readme",
  "bugs": {
    "url": "https://github.com/shridey/intelligentable/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "peerDependencies": {
    "@ant-design/icons": "^6.0.0",
    "antd": "^5.26.4",
    "write-excel-file": "^2.3.3",
    "file-saver": "^2.0.5",
    "jspdf": "^3.0.1",
    "jspdf-autotable": "^5.0.2",
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@types/file-saver": "^2.0.7",
    "@types/node": "^24.0.12",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "eslint": "^9.30.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "tsc-alias": "^1.8.16",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.36.0",
    "vite": "^7.0.3"
  },
  "sideEffects": [
    "*.css"
  ]
}
